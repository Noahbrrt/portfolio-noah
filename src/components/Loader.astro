<div id="site-loader" class="fixed inset-0 z-[99999] flex items-center justify-center bg-[#170040] transition-opacity duration-700">
  <div class="flex flex-col items-center gap-6">
    <svg width="72" height="72" viewBox="0 0 72 72" fill="none" xmlns="http://www.w3.org/2000/svg" class="animate-spin-slow">
      <circle cx="36" cy="36" r="32" stroke="#EC4899" stroke-width="6" stroke-dasharray="80 80" />
    </svg>
    <h1 class="text-3xl md:text-5xl font-bold tracking-widest text-white">Noah Barret</h1>
    <p id="loader-percent" class="text-fuchsia-300 text-lg font-medium tracking-wide">0%</p>
  </div>
  <style>
    .animate-spin-slow {
      animation: spin 2.2s linear infinite;
    }
    @keyframes spin {
      100% { transform: rotate(360deg); }
    }
  </style>
</div>
<script is:inline>
let percent = 0;
const percentEl = document.getElementById('loader-percent');
const interval = setInterval(() => {
  percent += Math.floor(Math.random() * 7) + 3;
  if (percent > 100) percent = 100;
  if (percentEl) percentEl.textContent = percent + '%';
  if (percent >= 100) clearInterval(interval);
}, 60);
setTimeout(() => {
  const loader = document.getElementById('site-loader');
  if (loader) loader.style.opacity = '0';
  setTimeout(() => { if (loader) loader.style.display = 'none'; }, 700);
}, 1700);
</script>
